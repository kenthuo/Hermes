{# 
    View variables:
        epoch: 
            Description: the epoch time stamp
            Type: integer
        gmtDateTime: 
            Description: the date/time format of the epoch in GMT timezone
            Type: string 
        localDateTime: 
            Description: the date/time format of the epoch in local timezone
            Type: string
        mm: 
            Description: the month of the epoch in GMT timezone
            Type: integer 
        dd: 
            Description: the day of the epoch in GMT timezone
            Type: integer
        yyyy: 
            Description: the year of the epoch in GMT timezone
            Type: integer
        hh: 
            Description: the hour of the epoch in GMT timezone
            Type: integer
        ii: 
            Description: the minute of the epoch in GMT timezone
            Type: integer
        ss: 
            Description: the second of the epoch in GMT timezone
            Type: integer                                                                                                
#}

{% extends '::base.html.twig' %}

{% block body %}

<ul class="breadcrumbs">
    <li><a href="{{ path('home') }}">Home</a></li>
    <li><a href="{{ path('developer') }}">Developer Pod</a></li>
    <li>Timestamp Utility</li>
</ul>

<div id="timestamp-panel">
    <p>Helps convert epoch time (seconds since 1970-01-01 00:00:00 UTC) to current GMT and Local display time.</p>
    <form action="{{ path('epoch_to_datetime') }}" method="post" class="entity-form" id="epoch-to-datetime-form">
        <fieldset id="epoch-to-datetime-fs">    
            {% include 'ContigoGamDeveloperBundle:Timestamp:epoch_to_datetime.html.twig' with { 'epoch' : epoch, 'gmtDateTime' : gmtDateTime, 'localDateTime' : localDateTime } %}
        </fieldset>
        <div id="submit">
            <button id="epoch-to-datetime-btn" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" type="submit"><span class="ui-button-text">Submit</span></button><br/>
        </div>                
    </form>
    <form action="{{ path('datetime_to_epoch') }}" method="post" class="entity-form" id="datetime-to-epoch-form">
        <fieldset id="datetime-to-epoch-fs">
            {% include 'ContigoGamDeveloperBundle:Timestamp:datetime_to_epoch.html.twig' with { 'mm' : mm, 'dd' : dd, 'yyyy' : yyyy, 'hh' : hh, 'ii' : ii, 'ss' : ss, 'epoch' : epoch } %}
        </fieldset>
        <div id="submit">
            <button id="datetime-to-epoch-btn" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" type="submit"><span class="ui-button-text">Submit</span></button><br/>
        </div>        
    </form>
</div>

{% endblock %}
 
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/reset.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/typography.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/jquery-ui/redmond/jquery-ui.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/gam/css/common.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/gam/css/developer.css') }}" />    
{% endblock %} 
 
{% block javascripts %}
    <script src="{{ asset('bundles/contigo/common/js/jquery/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/contigo/common/js/jquery/plugin/jquery.form.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/contigo/gam/js/common.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('bundles/contigo/gam/js/developer/timestamp.js') }}" type="text/javascript"></script>    
{% endblock %}