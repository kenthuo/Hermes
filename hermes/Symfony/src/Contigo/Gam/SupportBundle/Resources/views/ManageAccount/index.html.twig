{% extends '::base.html.twig' %}

{% block body %}

<ul class="breadcrumbs">
    <li><a href="{{ path('home') }}">Home</a></li>
    <li><a href="{{ path('support') }}">Support Pod</a></li>
    <li>Manage Accounts</li>
</ul>
<div id="manage-account-panel"> 
	<form action="{{ path('manage_account') }}" method="post" {{ form_enctype(form) }} id="entity-form" class="entity-form">	
	    {% include 'ContigoGamPartialBundle:Form:required-note.html.twig' %}
	    <fieldset id='manage-account-fs'>
			<legend>Manage Accounts</legend>   
			{{ form_label(form.customer, 'Customer:', { 'attr': {'class': 'required'}}) }}
			{{ form_widget(form.customer, { 'attr': {'class': 'ui-widget-content ui-corner-all'} }) }}<br />
			{% if form_errors(form.customer) is not empty %}
			<div class="field-error">{{ form_errors(form.customer) }}</div>
			{% endif %}                     
			{{ form_label(form.member, 'Login:', { 'attr': {'class': 'required'}}) }}
			{{ form_widget(form.member, { 'attr': {'class': 'ui-widget-content ui-corner-all'} }) }}<br />        
			{% if form_errors(form.member) is not empty %}
			<div class="field-error">{{ form_errors(form.member) }}</div>
			{% endif %}        
			{{ form_rest(form) }}            
	    </fieldset>
        <div id="submit">
            <button id="manage-account-btn" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" type="submit"><span class="ui-button-text">Submit</span></button><br/>
        </div>	    
	</form>
</div>
{% endblock %}
 
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/reset.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/typography.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/common/css/jquery-ui/redmond/jquery-ui.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/gam/css/common.css') }}" />
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/contigo/gam/css/support.css') }}" />    
{% endblock %} 
 
{% block javascripts %}
    <script src="{{ asset('bundles/contigo/common/js/jquery/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/contigo/common/js/jquery/jquery-ui.min.js') }}" type="text/javascript"></script>    
    <script src="{{ asset('bundles/contigo/common/js/jquery/plugin/jquery.form.js') }}" type="text/javascript"></script>    
    <script src="{{ asset('bundles/contigo/gam/js/common.js') }}" type="text/javascript"></script> 
    <script src="{{ asset('bundles/contigo/gam/js/support/manage_account.js') }}" type="text/javascript"></script>    
{% endblock %}