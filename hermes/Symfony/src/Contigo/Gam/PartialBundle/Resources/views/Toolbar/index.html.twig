<div class="fg-toolbar ui-widget-header ui-corner-all ui-helper-clearfix">
    <div class="fg-buttonset fg-buttonset-single ui-helper-clearfix">   
        <a id="entity-add" href="{{ entityAddRoute }}" class="fg-button ui-state-default fg-button-icon-solo ui-corner-all" title="Add"><span class="ui-icon ui-icon-plusthick"></span></a>
        <a id="entity-delete" href="{{ entityDeleteRoute }}" class="fg-button ui-state-default fg-button-icon-solo ui-corner-all" title="Delete"><span class="ui-icon ui-icon-trash"></span></a>
    </div>
    <div id="pager" class="fg-buttonset ui-helper-clearfix pager">
        <a href="#" class="fg-button ui-state-default fg-button-icon-solo ui-corner-all first" title="First Page"><span class="ui-icon ui-icon-seek-start"></span></a>
        <a href="#" class="fg-button ui-state-default fg-button-icon-solo ui-corner-all prev" title="Prev Page"><span class="ui-icon ui-icon-seek-prev"></span></a>
