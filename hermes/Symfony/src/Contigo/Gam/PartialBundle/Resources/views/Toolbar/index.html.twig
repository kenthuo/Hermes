            <option selected="selected" value="25">25</option>
            <option value="50">50</option>
            <option value="75">75</option>
            <option value="100">100</option>
            <option value="{{ sizeOfEntities }}">All</option>
        </select>
        <input id="filter-box" class="ui-widget filter-box" value="" maxlength="30" type="text" placeholder="Search" />             
